{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build DwarfForge Extension",
      "type": "shell",
      "command": "${env:GHIDRA_INSTALL_DIR}/support/gradle/gradlew",
      "args": [
        "--init-script",
        "${env:GHIDRA_INSTALL_DIR}/support/buildExtension.gradle",
        ":buildExtension"
      ],
      "options": {
        "cwd": "${workspaceFolder}/DwarfForge"
      },
      "group": "build",
      "problemMatcher": ["$javac"]
    },
    {
      "label": "Copy ZIP to Ghidra Extensions",
      "type": "shell",
      "command": "cp",
      "args": [
        "${workspaceFolder}/DwarfForge/build/dist/DwarfForge.zip",
        "${env:GHIDRA_INSTALL_DIR}/Ghidra/Extensions/"
      ],
      "dependsOn": "Build DwarfForge Extension",
      "problemMatcher": []
    }
  ]
}
